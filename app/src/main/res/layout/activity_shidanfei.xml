<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/danzhifei"
    android:gravity="center"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#F4A460"
            android:gravity="center"
            android:text="单质肥推荐施肥方案"
            android:textColor="#008000"
            android:textSize="20dp">
        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView

                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#D2B48C"
                android:gravity="center"
                android:text="基肥施肥量"

                android:textColor="#008000"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:background="#D2B48C"
                android:gravity="center"
                android:text="公斤/亩"
                android:textColor="#008000"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/ttv1"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#8B4513"
                android:gravity="center"
                android:text="氮肥"

                android:textColor="#FFFFFF"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_danfei"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:background="#FFF8DC"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/ttv2"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#8B4513"
                android:gravity="center"
                android:text="磷肥"

                android:textColor="#FFFFFF"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_linfei"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:background="#FFF8DC"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/ttv3"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#8B4513"
                android:gravity="center"
                android:text="钾肥"

                android:textColor="#FFFFFF"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_jiafei"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:background="#FFF8DC"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView

                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#D2B48C"
                android:gravity="center"
                android:text="追肥施肥量"

                android:textColor="#008000"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:background="#D2B48C"
                android:gravity="center"
                android:text="公斤/亩"
                android:textColor="#008000"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView

                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#8B4513"
                android:gravity="center"
                android:text="尿素"

                android:textColor="#FFFFFF"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_niaosu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:background="#FFF8DC"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp">

            </TextView>

        </LinearLayout>

        <Button
            android:id="@+id/fuhefeijisuan"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:background="@drawable/btnb"
            android:text="复合肥计算"
            android:textSize="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >


            <Button
                android:id="@+id/zhidaoyijian"
                android:layout_width="185dp"

                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/btnb"
                android:text="施肥指导意见"
                android:textSize="20dp"/>


            <Button
                android:id="@+id/duanxin"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/btnb"
                android:text="发送短信"
                android:textSize="20dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >


            <Button
                android:id="@+id/huafeituijian"
                android:layout_width="185dp"

                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/btnb"
                android:text="品牌化肥推荐"
                android:textSize="20dp"/>


            <Button
                android:id="@+id/ruanjianshuoming"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/btnb"
                android:text="软件说明"
                android:textSize="20dp"/>


        </LinearLayout>

    </LinearLayout>


</ScrollView>